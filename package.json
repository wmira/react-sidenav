{
  "name": "react-sidenav",
  "version": "3.0.0",
  "description": "A Simple SideBar Navigation written in React",
  "author": "Warren Mira",
  "scripts": {
    "playground": "webpack-dev-server --mode development --content-base playground ",
    "predist": "rimraf dist",
    "dist-build": "tsc && cp package.json dist && cp README.md dist ",
    "dist": "npm run lint && npm run test && npm run dist-build",
    "test": "jest",
    "lint": "tslint --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wmira/react-sidenav"
  },
  "bugs": {
    "url": "https://github.com/wmira/react-sidenav/issues"
  },
  "homepage": "https://github.com/wmira/react-sidenav",
  "keywords": [
    "react",
    "react-component",
    "side navigation",
    "sidenav",
    "menu",
    "vertical menu",
    "navigation"
  ],
  "dependencies": {
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "prop-types": "^15.5.8",
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "awesome-typescript-loader": "^5.0.0",
    "enzyme": "^2.8.0",
    "jest": "^23.6.0",
    "react-containers": "^15.2.3",
    "react-icons-kit": "^1.1.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "styled-components": "^3.4.6",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.4.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "webpack": "^4.12.0",
    "webpack-cli": "^2.1.5",
    "webpack-dev-server": "^3.1.4"
  },
  "peerDependencies": {
    "react": "^16",
    "react-dom": "^16",
    "styled-components": "^3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "react-sidenav": "<rootDir>/src"
    }
  }
}
